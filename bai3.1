#include <stdio.h>

// Nhập vào một số nguyên bất kỳ và hiển thị thông báo nếu số nguyên đó là số âm.

int main()
{
    int soam; // Khai báo biến.
    printf("\nNhập vào một số nguyên bất kỳ:\n"); 
    scanf("%d", &soam); 
    // Kiểm tra số nguyên có phải số nguyên âm hay không.
    if(soam < 0)
        printf("%d là số nguyên âm.", soam); // Hiển thị thông báo nếu số nguyên đó là số âm.
    else
        printf("%d không phải là số nguyên âm.", soam); //Hiển thị thông báo nếu số nguyên đó không phải là số âm.    
    
}
