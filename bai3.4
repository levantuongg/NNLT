#include <stdio.h>

/**Nhập vào hai số a, b và một kí tự bất kỳ. Chương trình sẽ hiển thị thông báo theo quy tắc sau:
Nếu kí tự nhập vào là +: Hiển thị tổng của a và b.
Nếu kí tự nhập vào là -: Hiển thị hiệu của a và b.
Các kí tự khác: Hiển thị Vui lòng nhập + hoặc -.**/


int main(){
    float a,b; // Khai báo biến.
    char kitu; // Khai báo biến.
    printf("\n Nhập một kí tự \'+\'hoặc \'-\':\n ");
    scanf("%c", &kitu);
    printf("\n Nhập vào hai số a và b:\n ");
    scanf("%f%f",&a, &b); 
    
    switch(kitu){
        case '+':
            printf("\n Tổng hai số a và b là: a + b = %.2f \n",a + b); // In ra tổng hai số a và b nếu là kí tự '+'.
            break;
        
        case '-':
            printf("\n Hiệu hai số a và b là: a - b = %.2f \n",a - b); // Hiển thị hiệu hai số a và b nếu là kí tự '-'.
            break;
        
        default :
            printf("\n Vui lòng nhập lại.\n"); // Yêu cầu người dùng nhập lại.
            break;
    }
}
